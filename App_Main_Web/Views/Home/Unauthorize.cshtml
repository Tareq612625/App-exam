@{
    ViewData["Title"] = "Unauthorized";
    Layout = "~/Views/Shared/_LayoutLR.cshtml";
}
<div class="error-404 d-flex align-items-center justify-content-center">
    <div class="container">
        <div class="card py-5">
            <div class="row g-0">
                <div class="col-xl-5">
                    <div class="card-body p-4">
                        <h1 class="display-1"><span class="text-warning">4</span><span class="text-danger">0</span><span class="text-primary">1</span></h1>
                        <h2 class="font-weight-bold display-4">Sorry, Unauthorized Access</h2>
                        <p>
                            Looks like you are lost!
                            <br>May be you are not connected to the internet!
                        </p>
                        <div class="mt-5">
                            <a href="@Url.Action("ApplicationHome","Home")" class="btn btn-sm btn-primary px-md-5 radius-30">Go Home</a>
                        </div>
                    </div>
                </div>
                <div class="col-xl-7">
                    <img src="~/assets/images/error/unauthorize.jpg" class="img-fluid" alt="">
                </div>
            </div>
            <!--end row-->
        </div>
    </div>
</div>